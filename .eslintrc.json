{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true // add Jest environment for testing
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb"
    ],
    "overrides": [
        {
            "files": ["*/.test.js"], // add configuration for test files
            "env": {
                "jest": true // add Jest environment for test files
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "globals": {
        "describe": "readonly",
        "it": "readonly"
    },
    "rules": {
        "no-undef": "error",
        "react/react-in-jsx-scope": "off", // disable this rule to allow JSX without importing React
        "linebreak-style": 0,
        "indent": ["error", 4]
    },
    "ignorePatterns": [
        "**/*.css",
        "**/*.jpg",
        "**/*.png"
    ]
}
